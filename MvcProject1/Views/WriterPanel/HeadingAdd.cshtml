@model Entities.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Başlık Ekleme</h1>

<br />

@using (Html.BeginForm("HeadingAdd", "WriterPanel", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(h => h.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(h => h.HeadingName)
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(c => c.CategoryId, (List<SelectListItem>)ViewBag.valuecategory, new { @class = "form-control" })
        <br />

        <button class=" btn btn-info">Başlığı Oluştur</button>
    </div>
}