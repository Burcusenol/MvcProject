@model Entities.Concrete.ImageFile
@{
    ViewBag.Title = "AddImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Fotoğraf Ekleme Sayfası</h2>
<br />
@using (Html.BeginForm("AddImage", "Gallery", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextBoxFor(c => c.ImageName, new { @class = "form-control" })

        <br /><br />
        @Html.Label("Fotoğraf")
        <br />
        <input type="file" name="ImagePath" />
        <br /><br />

        <button class="btn btn-success">Fotoğraf Ekle</button>
    </div>
}

