@model Entities.Concrete.Category


@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>AddCategory</h2>

@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.CategoryName)
        <br /> <br />
        @Html.Label("Açıklamayı yazınız")
        @Html.TextAreaFor(c => c.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.CategoryDescription)
        <br /> <br />
        <button class="btn btn-info" id="buton">Kategoriyi Ekle</button>
    </div>




}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>

<script>
    $('#buton').click(function () {
        swal({
            title: "Tebrikler!",
            text: "Kategori başarılı bir şekilde eklendi.",
            buttons: false,
            icon: "info",
            timer:6000
        }).then(function () {
            window.location.reload(true);
            tr.hide();
        });
    });
</script>
 
